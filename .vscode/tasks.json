{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "aho",
            "command": "C:\\MinGW64\\mingw64\\bin\\gcc.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-lm"
